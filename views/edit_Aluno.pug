extends layout

block content
  h1 #{title}
  form(method='POST', action='/Aluno/edit/'+item._id)
    .form-group
      label Escola
      input.form-control(name='School', type='text', value=item.School)
    .form-group
      label Sexo
      input.form-control(name='Sex', type='text', value=item.Sex)
    .form-group
      label Idade
      input.form-control(name='Age', type='number', value=item.Age)
    .form-group
      label Tempo de deslocamento - 1 (15 min., 2 - 15 to 30 min., 3 - 30 min. to 1 hour, or 4 -1 hour)
      input.form-control(name='Traveltime', type='number', value=item.Traveltime)
    .form-group
      label Estudo semanais - Por horas (numeric: 1 - 2 hours, 2 - 2 to 5 hours, 3 - 5 to 10 hours, or 4 - 10 hours)
      input.form-control(name='Studytime', type='number', value=item.Studytime)
    .form-group
      label Repetência - 0 a 5
      input.form-control(name='Failures', type='number', value=item.Failures)
    .form-group
      label Relação Familiar - 0 a 5
      input.form-control(name='Famrel', type='number', value=item.Famrel)
    br
    input.btn.btn-primary(type='submit', value='Submit' style={'font-size': '20px', background: 'green'})
